<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_pra_voce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/pra_voce"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_pra_voce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/label_seus_amigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/seus_amigos"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_seus_amigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/label_ultimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/ultimas"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ultimas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_margin="5dp"/>

    </LinearLayout>

</ScrollView>